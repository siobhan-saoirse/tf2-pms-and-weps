"VertexlitGeneric"
{
	"$baseTexture" "models/pf2/player/items/all_class/all_halo"
	"$bumpmap" "models/pf2/effects/flat_normal" 
	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
	"$detailscale" "5"
	"$detailblendfactor" .01
	"$detailblendmode" 6
	"$yellow" "0"


	"$envmap" "env_cubemap"
	"$envmaptint" "[2 2 2]"
	">=DX90"
	{
		"$basealphaenvmapmask" 1 
		"$selfillum" 1
	}
	"<DX90"
	{
		"$normalmapalphaenvmapmask" 1 
	}

	"$phong" "1"
	"$phongexponent" "25"
	"$phongboost" "12"
	"$lightwarptexture" "models/pf2/lightwarps/weapon_lightwarp"	
	"$phongfresnelranges"	"[.25 1 4]"
	"$basemapalphaphongmask" "1"

	"$rimlight" "1"
	"$rimlightexponent" "4"
	"$rimlightboost" "2"
	"$cloakPassEnabled" "1"

	"Proxies"
	{
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1" "$yellow"
			"resultVar" "$color2"
		}
	}
}