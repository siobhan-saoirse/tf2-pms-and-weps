	"Proxies"
	{
		"PlayerTintColor"
		{
			"resultVar"		"$colortint_tmp"
		}
		"SelectFirstIfNonZero"
		{
			"srcVar1"		"$colortint_tmp"
			"srcVar2"		"$colortint_base"
			"resultVar"		"$color2"
		}
		"YellowLevel"
		{
			"resultVar"		"$yellow"
		}
		"Multiply"
		{
			"srcVar1"		"$color2"
			"srcVar2"		"$yellow"
			"resultVar"		"$color2"
		}
	}
